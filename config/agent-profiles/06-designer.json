      { "fn_id": "FN-054", "name": "memory_store", "schicht": "S2", "wann": "Design-Entscheidungen (5-6), Farb-Paletten (5)" },
      { "fn_id": "FN-055", "name": "memory_list", "schicht": "S2", "wann": "Design-Erinnerungen" },
      { "fn_id": "FN-056", "name": "memory_get", "schicht": "S2", "wann": "Bestimmtes Pattern" },
