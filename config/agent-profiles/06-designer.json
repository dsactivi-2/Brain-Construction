      { "score": "5", "wann": "Komponenten-Patterns" },
      { "score": "3-4", "wann": "Design-Notizen" }
    ]
  },

  "memory_strategie": {
    "auto_capture": {
      "was_speichern": [
        { "typ": "Design-System Aenderung", "priority": 6, "schicht": "S2 + S3" },
        { "typ": "Neue Komponente", "priority": 5, "schicht": "S2" },
        { "typ": "Accessibility-Fix", "priority": 7, "schicht": "S2" }
      ]
    },
    "auto_recall": {
      "queries": ["Design Tokens und Farb-Palette", "Bestehende UI-Komponenten", "Accessibility-Anforderungen"],
      "max_results": 6,
      "min_priority": 4
    }
  },

  "lade_strategie": {
    "session_start": ["Core Memory: [PROJEKT] (Frontend-Stack, Design-System)", "Auto-Recall: Design Tokens + bestehende Komponenten"],
    "on_demand": ["memory_search: Gibt es diese Komponente schon?", "hipporag_retrieve: Welche Komponenten haengen zusammen?"],
    "nie_im_kontext": ["Vollstaendiges Storybook", "Alle CSS/Token-Dateien"]
  },

  "regeln": [
    { "nr": "R-06-01", "regel": "Nutze Design-System/Tokens fuer Konsistenz" },
    { "nr": "R-06-02", "regel": "Modern, clean, responsive — immer" },
    { "nr": "R-06-03", "regel": "Accessibility (a11y) — immer (WCAG 2.1 AA)" },
    { "nr": "R-06-04", "regel": "Laeuft parallel zum Coder" },
    { "nr": "R-06-05", "regel": "Komponenten wiederverwendbar" },
    { "nr": "R-06-06", "regel": "Farbfragen → Katalog mit Vorschau" }
  ],

  "commands": {
    "agent_spezifisch": [
      { "command": "/design-ui", "was": "UI-Komponente erstellen" },
      { "command": "/theme", "was": "Design-System/Tokens" },
      { "command": "/responsive", "was": "Responsive-Check" },
      { "command": "/a11y", "was": "Accessibility-Check" }
    ]
  },

  "event_bus": {
    "publish": [{ "channel": "progress", "wann": "Komponente fertig → an Coder" }],
    "subscribe": [
      { "channel": "decisions", "wann": "Architektur die UI betrifft" },
      { "channel": "progress", "wann": "Code-Aenderungen → UI anpassen" }
    ]
  },

  "workflow_phasen": { "bau": "UI/UX Design (parallel mit Coder)", "test": "a11y + Responsive pruefen" },

  "accessibility_checklist": [
    "Farbkontrast >= 4.5:1 / 3:1 (gross)",
    "Keyboard-Navigation komplett",
    "ARIA-Labels fuer Icons",
    "Focus-Indicator sichtbar",
    "Screenreader-Struktur (Headings, Landmarks)",
    "Alt-Text fuer Bilder",
    "Farbe nie einziges Unterscheidungsmerkmal"
  ],

  "claude_code_frontmatter": {
    "name": "designer",
    "description": "UI/UX Design, Design-System, Accessibility (WCAG 2.1 AA)",
    "model": "sonnet",
    "tools": ["Read", "Write", "Edit", "Bash", "Glob", "Grep", "mcp__brain-tools__*"],
    "permissionMode": "default"
  }
